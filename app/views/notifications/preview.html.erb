<h4> <%= I18n.t('active_scaffold.notification.asynchronous.title')%> </h4>

<p class="simulate_query_date"> <%= I18n.t('active_scaffold.notification.should_send_emails')%>: <%= I18n.t("active_scaffold.#{@should_run}")%> </p>

<% unless @job.nil? %>

	<p class="simulate_query_date"> <%= I18n.t('active_scaffold.notification.asynchronous.last_time')%>: <%= (@job.last_time.nil? ? I18n.t('active_scaffold.notification.asynchronous.notyet') : I18n.localize(@job.last_time, :format => :default)) %> </p>

	<p class="simulate_query_date"> <%= I18n.t('active_scaffold.notification.asynchronous.next_time')%>: <%= (@job.next_time.nil? ? I18n.t('active_scaffold.false') : I18n.localize(@job.next_time, :format => :default)) %> </p>

	<p class="simulate_query_date"> <%= I18n.t('active_scaffold.notification.asynchronous.frequency')%>: <%= @frequency %> </p>

<% else %>
	<p class="simulate_query_date"> <%= I18n.t('active_scaffold.notification.asynchronous.nojob')%> </p>
<% end %>

<p class="form-footer">
  <%= link_to as_(:close), main_path_to_return, :class => 'as_cancel', :remote => request.xhr? %>
  <%= loading_indicator_tag(:action => :create, :id => params[:id]) %>
</p>